<div class="new-league">

	<h2>Create A New League</h2>

	<%=form_for(@league) do |f| %>

	<div class="league-item">
	<label alt="The name of your league.">Name<label>
	<%= f.text_field :name %>
	</div>

	<h3 id="league-position-info" title="Why does this matter if we don't care what players you pick? Because the number of players at each position determines the replacement value of each player, which should be the only value you care about.">
		Select The Number of Players At Each Position
	</h3>

	<div class="league-item">
	<label>Number Of C</label>
	<%= f.select :num_c, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of 1B</label>
	<%= f.select :num_1b, options_for_select([1,2,3]) %>
	</div>

		<div class="league-item">
	<label>Number Of 2B</label>
	<%= f.select :num_2b, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of 3B</label>
	<%= f.select :num_3b, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of SS</label>
	<%= f.select :num_ss, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of LF</label>
	<%= f.select :num_lf, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of CF</label>
	<%= f.select :num_cf, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of RF</label>
	<%= f.select :num_rf, options_for_select([1,2,3]) %>
	</div>

	<div class="league-item">
	<label>Number Of DH</label>
	<%= f.select :num_dh, options_for_select([1,2,3]) %>
	</div>

	<h3>Select The Number of Teams in Your League</h3>

	<div class="league-item">
	<label>Number Of Teams</label>
	<%= f.select :num_teams, options_for_select([6,7,8,9,10,11,12]) %>
	</div>

	<%= f.hidden_field :user_id, :value => current_user.id %>

	<div id="league-button">
	<%= f.submit %>
	</div>

	<% end %>


</div>